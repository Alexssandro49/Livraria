{
  "python.analysis.extraPaths": ["${workspaceFolder}/__pypackages__/3.10/lib"],
  "python.autoComplete.extraPaths": [
    "${workspaceFolder}/__pypackages__/3.10/lib"
  ],
  "python.analysis.autoImportCompletions": true,
  "workbench.colorCustomizations": {
    // Barra de atividades
    "activityBar.background": "#800020",          // Fundo em bordô
    "activityBar.activeBackground": "#fd1e1e",
    "activityBar.foreground": "#ffffff",          // Ícones em branco para contraste
    "activityBar.inactiveForeground": "#ffffff99", // Ícones inativos com opacidade reduzida
    "activityBarBadge.background": "#bf0040",     // Fundo dos badges em um tom mais vibrante de bordô
    "activityBarBadge.foreground": "#ffffff",     // Texto dos badges em branco

    // Barra de status
    "statusBar.background": "#800020",            // Fundo em bordô
    "statusBar.foreground": "#ffffff",            // Texto em branco
    "statusBarItem.hoverBackground": "#9b3a4d",  // Fundo ao passar o mouse, um tom mais claro de bordô
    "statusBarItem.remoteBackground": "#bf0040", // Status remoto com um tom vibrante de bordô
    "statusBarItem.remoteForeground": "#ffffff", // Texto remoto em branco

    // Título da janela
    "titleBar.activeBackground": "#800020",       // Fundo ativo em bordô
    "titleBar.activeForeground": "#ffffff",       // Texto ativo em branco
    "titleBar.inactiveBackground": "#80002099",   // Fundo inativo com transparência
    "titleBar.inactiveForeground": "#ffffff99",   // Texto inativo com opacidade reduzida

    // Outros elementos
    "commandCenter.border": "#bf0040",            // Bordas com um tom vibrante de bordô
    "sash.hoverBorder": "#9b3a4d"                 // Bordas ao passar o mouse com tom claro de bordô
},
  "peacock.color": "#007fff",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  }
}
